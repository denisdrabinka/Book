    <Window.Resources>
       
        <ControlTemplate x:Key="TreeViewItemTemp">
            <Border>
                <ContentControl Name="CC" Tag="{TemplateBinding Name}" Content="{TemplateBinding Tag}">
                        <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseUp">
                            <i:InvokeCommandAction Command="{Binding ShowTreeViewBook}"
                                           CommandParameter="{Binding ElementName=CC, Path=Tag}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ContentControl>
            </Border>
        </ControlTemplate>
        
        <Style TargetType="TreeViewItem">
            <Style.Setters>
                <Setter Property="Control.Tag" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Header}" />
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="Control.IsFocused" Value="True">
                    
                    <Setter Property="Control.Template" Value="{StaticResource TreeViewItemTemp}" />
                    <Setter Property="Control.Foreground" Value="Red" />
                    <Setter Property="Control.FontSize" Value="14" />
                    <Setter Property="Control.FontSize" Value="14" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

